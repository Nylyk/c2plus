{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./src",
        "allowJs": true,
        "checkJs": false,
        "outDir": "dist/js",
        "module": "ES2015",
        "target": "ES2015",
        "moduleResolution": "node",
        "strict": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    }
}
